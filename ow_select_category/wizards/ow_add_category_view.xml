<odoo>
	<data>
		<record id="add_odoo_categories_form" model="ir.ui.view">
			<field name="name">add.categories.form</field>
			<field name="model">add.categories</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Add Odoo Categories">
					<sheet>
						<div class="text-center">
							<div>
								<label for="category_id" string="Select Category"/>
								<field name ="category_id"/>
							</div>
						</div>
					</sheet>
					<separator colspan="6"/>
					<footer>
						<button name="waves_add_category" string="ADD" type="object" class="btn-primary"/>
						<button special="cancel" name="cancel" string="Cancel"/>
					</footer>
				</form>
			</field>
		</record>
	</data>
</odoo>
